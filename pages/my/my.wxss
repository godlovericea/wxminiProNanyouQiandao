page{
  background-color: #ffffff;
}
.loginImg{
  display: flex;
  flex-direction: column;
  width: 100%;
  position: relative;
}
.site-img{
  width: 100%;
  height:400rpx;
}
.myTitle{
  width: 100%;
  position: absolute;
  text-align: center;
  top: 80rpx;
  color: #ffffff;
  font-weight:600;
  letter-spacing: 4rpx;
  font-size:30rpx;
}
.avatarBox{
  position: absolute;
  width: 100%;
  height: 120rpx;
  top: 168rpx;
  text-align: center;
}
.avatar{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.nickname{
  width: 100%;
  position: absolute;
  text-align: center;
  bottom: 50rpx;
  color: #ffffff;
  font-weight:600;
  letter-spacing: 4rpx;
  font-size:30rpx;
}

.myItems{
  padding: 0 40rpx;
}
.itemsBox{
  height: 110rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  border-bottom: 1px solid rgba(238,238,238,1);
}
.editImg{
  width: 32rpx;
  height: 32rpx;
  margin-right: 20rpx;
}


