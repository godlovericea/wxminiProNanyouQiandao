/**index.wxss**/
.loginImg{
  display: flex;
  flex-direction: column;
  width: 100%;
  position: relative;
}
.loginTitle{
  width: 100%;
  position: absolute;
  text-align: center;
  bottom: 70rpx;
  color: #ffffff;
  font-weight:600;
  letter-spacing: 4rpx;
  font-size:30rpx;
}
.site-img{
  width: 100%;
  height:576rpx;
}
.loginBox{
  margin-top: 140rpx;
}
.loginBox button{
  width: 100%;
  background:linear-gradient(90deg,rgba(55,165,254,1) 0%,rgba(15,106,249,1) 100%);
  color: #ffffff;
  font-size:32rpx;
  font-weight:500;
}
.loginBox button[disabled]{
  background:#CCCCCC;
  color: #ffffff;
  font-size:32rpx;
  font-weight:500;
}
.usernameBox{
  width: 560rpx;
  border-radius: 8rpx;
}
.staffNoBox{
  margin-top: 80rpx;
}
.loginBtnBox{
  margin-top: 100rpx;
}
.loginInputStyle .van-cell{
  border-radius: 8rpx;
}
.loginInputStyle .van-cell__left-icon-wrap{
  color: #999999;
  margin-right: 40rpx;
}
.loginBtn button{
  width: 560rpx;
  color: #ffffff;
  border-radius: 8rpx;
  font-weight:500;
  letter-spacing: 10rpx;
  font-size:32rpx;
}
.loginBtn .van-button--normal{
  background:linear-gradient(90deg,rgba(55,165,254,1) 0%,rgba(15,106,249,1) 100%);
}
.loginBtn .van-button--disabled {
  background:#CCCCCC;
}
.dialogClass{
  height: 500px;
}
.van-dialog{
  border-radius: 12rpx;
}