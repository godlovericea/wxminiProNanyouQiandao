/* pages/details/details.wxss */
page{
  background-color: #fff;
}
.loginImg{
  display: flex;
  flex-direction: column;
  width: 100%;
  position: relative;
}
.site-img{
  width: 100%;
  height:450rpx;
}
.titleInfoBox{
  width: 100%;
  position: absolute;
  top: 60rpx;
  display: flex;
  justify-content: space-between;
}
.leftInfo{
  display: flex;
  flex-direction: column;
  margin-left: 40rpx;
}
.title{
  color: #fff;
  font-size:32rpx;
  font-weight:500;
}
.num{
  font-size:28rpx;
  font-weight:400;
  color: #BDD3FD;
  margin-top: 28rpx;
}
.rightInfoBox{
  margin-right: 40rpx;
  display: flex;
  flex-direction: column;
}
.rightInfo{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-bottom: 25rpx;
}
.activeCircle{
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background-color: #00E6E8;
  margin-right: 10rpx;
}
.nonActiveCircle{
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background-color: #F9F871;
  margin-right: 10rpx;
}
.rightTitle{
  color: #98BBFC;
  font-size:24rpx;
  font-weight:400;
}
.stepCircle{
  margin-top: 120rpx;
  position: relative;
}
.circleImg{
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  /* top: 25%; */
  left: 25%;
  /* right: 25%; */
  bottom: 25%;
}
.inMeeting{
  position: absolute;
  bottom: 50rpx;
  width: 100%;
  text-align: center;
}
.persons{
  font-size:28rpx;
  font-weight:400;
  color: #fff;
}
.detailsTitleBox{
  position: absolute;
  top: 80rpx;
  width: 100%;
  text-align: center;
}
.detailsTitle{
  font-size:36rpx;
  font-weight:500;
  color: #fff;
  letter-spacing: 5rpx;
}
.meetDetails{
  padding: 70rpx 40rpx;
}
.meetTitle{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.meetName{
  font-size:32rpx;
  font-weight:500;
  color:#666666;
}
.meetType{
  font-size:24rpx;
  font-weight:400;
  color: #0F6AF9;
}
.meetContent{
  margin-top: 40rpx;
}
.meetText{
  font-size:28rpx;
  font-weight:400;
  color: #AAA;
  text-align: justify;
}
.itemsBox{
  margin-top: 50rpx;
  display: flex;
  flex-direction: column;
}
.itemDetails{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin: 10rpx 0;
}
.itemImg{
  width: 24rpx;
  height: 24rpx;
  margin-right: 10rpx;
}
.itemText{
  font-size: 28rpx;
  color: #AAAAAA;
  font-weight: 400;
}
