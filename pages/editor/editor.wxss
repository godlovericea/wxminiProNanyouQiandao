/* pages/editor/editor.wxss */
.profileTitleBox{
  height: 90rpx;
  line-height: 90rpx;
  padding: 0 0 0 40rpx;
}
.profileTitle{
  font-size:28rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
}
.contentBox{
  background-color: #ffffff;
  padding: 0 40rpx;
}
.avatarBox{
  border-bottom: 1px solid rgba(238,238,238,1);
}
.avatarItems{
  height: 184rpx;
  display: flex;
  align-items: center;
}
.avatar{
  height: 120rpx;
  width: 120rpx;
  border-radius: 50%;
}
.context{
  color: #CCCCCC;
  font-size:32rpx;
  line-height: 184rpx;
}
.rightIconBox{
  height: 184rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.rightIcon{
  height: 24rpx;
  width: 24rpx;
}
.infoBox{
  height: 90rpx;
  border-bottom: 1rpx solid rgba(238,238,238,1);
}
.infoItems{
  line-height: 90rpx;
  font-size:32rpx;
  font-weight:400;
  color:rgba(187,187,187,1);
}
.infotext{
  color: #333333;
  font-size:32rpx;
  line-height: 90rpx;
}
.infoRightIconBox{
  height: 90rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.infoRightIcon{
  height: 24rpx;
  width: 24rpx;
}